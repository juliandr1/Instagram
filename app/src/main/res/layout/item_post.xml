<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPostedImage"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_below="@+id/tvUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/ivProfilePicTimeline"
        tools:text="Hello" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="382dp"
        android:layout_height="95dp"
        android:layout_below="@+id/tvNumLikes"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp" />

    <Button
        android:id="@+id/btnLike"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/ivPostedImage"
        android:layout_alignParentStart="false"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ufi_heart_icon" />

    <Button
        android:id="@+id/btnComment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/ivPostedImage"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/btnLike"
        android:background="@drawable/ufi_comment"
        android:color="@color/black" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/ivPostedImage"
        android:layout_marginStart="23dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/btnComment"
        android:background="@drawable/ufi_new_direct"
        android:tint="@color/black" />

    <ImageView
        android:id="@+id/ivProfilePicTimeline"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_below="@+id/ivPostedImage"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ufi_save" />

    <TextView
        android:id="@+id/tvNumLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLike"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        tools:text="8 likes" />
</RelativeLayout>